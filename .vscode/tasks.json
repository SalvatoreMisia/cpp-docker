{
    "version": "2.0.0",
    "tasks": [
        {   
            "label": "Create bin dir",
            "type": "shell",
            "command": "mkdir -p ${fileDirname}/bin",
            "windows": {
                "command": "cmd /c if not exist \"${fileDirname}\\bin\" mkdir \"${fileDirname}\\bin\"" // we are forcing cmd to create the directory
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [],
            "group": "build"
        },
        {
            "label": "Clean",
            "type": "shell",
            "command": "rm ${fileDirname}/bin/* && echo 'Bin directory cleaned'",
            "windows": {
                "command": "if (Test-Path \"${fileDirname}\\bin\") { Remove-Item \"${fileDirname}\\bin\\*\" -Recurse -Force } ; Write-Output 'Bin directory cleaned'" // PowerShell
            },
            "group": "build"
        },
        {
            "label": "Build C++",
            "type": "shell",
            "command": "g++",
            "args": [
                "-g",
                "-std=c++17",
                "-Wall",
                "-I/usr/include/boost",
                "${file}", // active file
                "-o",
                "${fileDirname}/bin/${fileBasenameNoExtension}"
            ],
            "windows": {
                "args": [
                    "-g",
                    "-std=c++17",
                    "-Wall",
                    "${file}",
                    "-o",
                    "${fileDirname}\\bin\\${fileBasenameNoExtension}.exe"
                ]
            },
            "dependsOn": ["Create bin dir"],
            "group": "build",
            "problemMatcher": "$gcc"
        },
        {
            "label": "Clean and Build C++",
            "dependsOrder": "sequence", // or "parallel",
            "dependsOn": [
                "Clean", 
                "Build C++"
            ],
        },
        {
            "type": "cppbuild",
            "label": "C/C++: g++ build active file",
            "command": "g++",
            "args": [
                "-g",
                "-std=c++17",
                "-Wall",
                "-I/usr/include/boost",
                "${file}", // active file
                "-o",
                "${fileDirname}/bin/${fileBasenameNoExtension}"
            ],
            "windows": {
                "args": [
                    "-g",
                    "-std=c++17",
                    "-Wall",
                    "${file}",
                    "-o",
                    "${fileDirname}\\bin\\${fileBasenameNoExtension}.exe"
                ]
            },
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ]
}